<div class="panel-body">
  <%= form_for @profile, html: { multipart: true } do |f| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :school_grad %><br>
      <%= f.text_field :school_grad, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :website %><br>
      <%= f.text_field :website, placeholder: "https://mlh.io", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :github %><br>
      <%= f.text_field :github, placeholder: "https://github.com/jonsmith123", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :dietary_needs %><br>
      <%= f.text_area :dietary_needs, placeholder: "No gluten, no dairy...", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :resume %><br>
      <%= f.file_field :resume, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
