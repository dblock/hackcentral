<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">My profiles</div>
  <div class="panel-body">
    <p>You have <%= current_user.profiles.count %> profiles!</p>

    <br>

    <%= link_to "Create a profile", new_profile_path, class: "btn btn-primary" %></button>
  </div>

  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Last updated</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.name %></td>
          <td><%= local_time_ago(profile.updated_at) %></td>
          <td>
            <!--<div class="btn-group">-->
              <%= link_to 'Show', profile, class: 'btn btn-default' %>
              <%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-default' %>
              <%= link_to 'Destroy', profile, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></button>
            <!--</div>-->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
