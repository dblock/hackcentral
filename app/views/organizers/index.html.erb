<h1>Listing organizers</h1>
<div class="row">
  <div class="col-md-5">
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @organizers.each do |organizer| %>
          <tr>
            <td><%= organizer.user.name %></td>
            <td><%= link_to 'Destroy', organizer_path(@hackathon, organizer), class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Organizer', new_organizer_path, class: 'btn btn-primary'  %>
