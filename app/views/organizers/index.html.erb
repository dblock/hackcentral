<h1>Listing organizers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Hackathon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizers.each do |organizer| %>
      <tr>
        <td><%= organizer.user.name %></td>
        <td><%= link_to 'Destroy', hackathon_organizer_path(@hackathon, organizer), class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organizer', new_hackathon_organizer_path, class: 'btn btn-primary'  %>
