<div class="row">
  <% @hackathons.each do |hackathon| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag hackathon.logo.url(:medium) %>
        <div class="caption">
          <h3><%= hackathon.name %></h3>
          <p><%= hackathon.tagline %></p>
          <p>
            <%= link_to 'More', hackathon, :class => "btn btn-primary", :role => "button" %>
            <%= link_to 'Signup', new_application_path(:hackathon_id => hackathon.id), :class => "btn btn-default", :role => "button" %>
          </p>
        </div> <!-- ./caption -->
      </div> <!-- ./thumbnail -->
    </div> <!-- ./col-sm-6 col-md-4 -->
  <% end %>
</div> <!-- ./row -->




<h1>Listing hackathons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>Tagline</th>
      <th>Location</th>
      <th>Logo</th>
      <th>Header</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hackathons.each do |hackathon| %>
      <tr>
        <td><%= hackathon.name %></td>
        <td><%= hackathon.about %></td>
        <td><%= hackathon.tagline %></td>
        <td><%= hackathon.location %></td>
        <td><%= image_tag hackathon.logo.url(:medium) %></td>
        <td><%= image_tag hackathon.header.url(:medium) %></td>
        <td><%= hackathon.start %></td>
        <td><%= hackathon.end %></td>
        <td><%= link_to 'Show', hackathon %></td>
        <td><%= link_to hackathon.name, root_url(subdomain: hackathon.subdomain) %></td>
        <td><%= link_to 'Edit', edit_hackathon_path(hackathon) %></td>
        <td><%= link_to 'Destroy', hackathon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

