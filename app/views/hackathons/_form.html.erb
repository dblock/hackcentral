<div class="panel-body">
  <%= form_for @hackathon, html: { multipart: true } do |f| %>
    <% if @hackathon.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@hackathon.errors.count, "error") %> prohibited this hackathon from being saved:</h2>

        <ul>
        <% @hackathon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :subdomain %><br>
      <%= f.text_field :subdomain, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :about %><br>
      <%= f.text_area :about, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :tagline %><br>
      <%= f.text_field :tagline, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location %><br>
      <%= f.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :logo %><br>
      <%= f.file_field :logo, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :header %><br>
      <%= f.file_field :header, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :start %><br>
      <%= f.datetime_select :start, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :end %><br>
      <%= f.datetime_select :end, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
