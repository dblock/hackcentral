<div class="jumbotron">
  <div class="container">

    <div class='hackathon'>
      <div class='page-header'>
        <div class='sub-header'>
          <div class='hackathon-image'>
            <div class='hackathon-image-border'>
              <%= image_tag @hackathon.logo.url(:small) %>
              <!--<img alt="Logo for hackru-fall-2014" src="https://s3.amazonaws.com/hackerleague-production/organizations/logos/5433fa959f00352c14000006/medium.png?1412693198" />-->
            </div>
          </div>
          <h2 class='page-title'>
            <%= @hackathon.name %>
            <div class='small'><br>
              <%= @hackathon.tagline %>
            </div>
          </h2>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="description col-sm-12">

          <!-- About -->
            <div class="row">
              <div class="col-md-3">
                <p><strong>About:</strong></p>
              </div><!-- .col-md-3 -->
              <div class="col-md-9">
                <hr>
              </div><!-- .col-md-9 -->
            </div><!-- .row -->
            <div class="row">
              <div class="col-sm-12">
                  <p>
                    <%= @hackathon.about %>
                  </p>
              </div><!-- .col-sm-12 -->
            </div><!-- .row -->
          <!-- .About -->

          <br />

          <!-- How to Enter -->
            <div class="row">
              <div class="col-md-3">
                <p><strong>How To Enter:</strong></p>
              </div><!-- .col-md-3 -->
              <div class="col-md-9">
                <hr>
              </div><!-- .col-md-9 -->
            </div><!-- .row -->
            <p>
              All current university
                <% if @hackathon.hs_hackers_allowed? %>
                  and current high school students
                  <% else %>
                  students
                <% end %>
              are allowed to submit applications to be reviewed. Only the students that have been accepted to <%= @hackathon.name %> can submit a hack.
            </p>
          <!-- .How to Enter -->

          </div><!-- .description col-sm-12 -->
        </div><!-- .row -->
      </div><!-- .col-md-8 -->

      <div class="col-md-4">
        <div class="well">
          <% if @hackathon.mlh_sanctioned? %>
            <div class="banner major"><a href="https://mlh.io">MAJOR LEAGUE</a></div>
          <% end %>

          <h3 class="section-title"><strong>Register</strong></h3>
            <p><%= link_to "Signup for this hackathon!", new_application_url(:hackathon_id => @hackathon.id, :subdomain => false), class: "btn btn-lg btn-primary" %><p>

          <br />

          <h3 class="section-title"><strong>Time</strong></h3>
            <p><i class="fa fa-clock-o"></i> <%= @hackathon.start.strftime("%b %e, %Y") %> until <%= @hackathon.end.strftime("%b %e, %Y") %></p>

          <br />

          <h3 class="section-title"><strong>Location</strong></h3>
            <p><i class="fa fa-map-marker"></i> <%= @hackathon.location %></p>

          <br />

          <h3 class="section-title"><strong>Organizers</strong></h3>
            <p>coming soon</p>
          <% if user_signed_in? %>
            <% if current_user.organizers.where(hackathon_id: @hackathon).any? %>
              <h3 class="section-title"><strong>Manage</strong></h3>
              <%= link_to 'Dashboard', admin_hackathon_url(@hackathon, :subdomain => false), class: "btn btn-md btn-primary" %>
              <%= link_to 'Edit', edit_hackathon_url(@hackathon, :subdomain => false), class: "btn btn-md btn-primary" %>
            <% else %>
            <% end %>
          <% end %>
        </div><!-- .well -->
      </div><!-- .col-md-4 -->
    </div><!-- .row -->

  </div><!-- .container -->
</div><!-- .jumbotron -->
